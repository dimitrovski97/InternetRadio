@model InternetRadioPancakes.Models.Category

@{
    ViewBag.Title = "Details";
}
<br />
<br />


<h2>@Html.DisplayFor(model => model.Title)</h2>

<div>
    <h4>[Категорија]</h4>
    <hr />

    <div style="display:inline-block;width:100%">
        @foreach (var item in Model.Posts)
        {
        <div class="post-icon">
            <img src="@item.ImageUrl" />
            <a href="/Posts/Details/@item.ID"><h2>@item.Title</h2></a>
            <p>@item.Category - Прегледи: @item.Views</p>
            @if (User.IsInRole("Admin") || User.IsInRole("Editor"))
            {
                <a href="/Posts/Edit/@item.ID">Промени</a>
}
            @if (User.IsInRole("Admin"))
    {
        <a href="/Posts/Delete/@item.ID"> | Избриши</a>
}
        </div>

        }

    </div>
    <p>
        @Html.ActionLink("Промени", "Edit", new { id = Model.ID }) |
        @Html.ActionLink("Назад во категории", "Index")
    </p>
