<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="~/favicon.ico">
    <title>@ViewBag.Title - Радио Freedom</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img  class="logo" src="~/Content/images/logo.png">
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Почетна", "Index", "Home")</li>
                    <li>@Html.ActionLink("Категории", "Index", "Categories")</li>
                    <li>@Html.ActionLink("Вести", "Index", "Posts")</li>
                    <li>@Html.ActionLink("#СлушајРадио", "ListenRadio", "Home")</li>
                    <li>@Html.ActionLink("Контакт", "Contact", "Home")</li>
                    @if (User.IsInRole("Admin")|| User.IsInRole("Editor"))
                    {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Опции<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="/Posts/Create/">Нов пост</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                            <li><a href="/Categories/Create/">Нова категорија</a></li>
                            }
                            <li><a href="/Categories/">Промени категорија</a></li>
                            <li><a href="/Posts/">Промени пост</a></li>
                            @if (User.IsInRole("Admin"))
                            {
                            <li><a href="/Account/AddUserToRole">Додај привилегии</a></li>
                            }
                        </ul>
                    </li>
                    }
                </ul>

                <audio class="audio-player" src="http://www.partyviberadio.com:8000/;listen.pls?sid=1" controls="controls"> autoplay="true" controls="true" volume="1.0">
                 
</div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <center><p>&copy; @DateTime.Now.Year - ИнтернетРадио <strong>Freedom</strong></p></center>
            <center style="padding: 0;float: right;" class="login btn btn-primary btn-lg">@Html.Partial("_LoginPartial")</center>
</footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
